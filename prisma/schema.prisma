generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String @id @default(uuid()) // ユーザーのユニークID
  email String @unique             // 認証に使用するメールアドレス
  name  String?                    // ユーザー名 (NextAuthで取得可能)

  // 観たい映画とのリレーションを後で追加します
}